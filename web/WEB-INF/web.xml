<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--监听器的使用：只要将监听器注册给Tomcat即可，就能够使得Tomcat进行监听-->
    <listener>
        <listener-class>Listener.Servlet_Listener</listener-class>
    </listener>
    <!--将过滤器注册给Tomcat,通知Tomcat已经创建了过滤器-->
    <filter>
        <filter-name>Servlet_Filter</filter-name>
        <filter-class>Fileter.Servlet_Filter</filter-class>
    </filter>
    <!--告诉Tomcat，过滤器将会对那些文件进行拦截-->
    <filter-mapping>
        <filter-name>Servlet_Filter</filter-name>
        <url-pattern>/index.html</url-pattern>
    </filter-mapping>
    <!--将欢迎文件注册到Tomcat-->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>UserAdd_Servlet</servlet-name>
        <servlet-class>Entity.UserAdd_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>Entity2.UserAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserSelect_Servlet</servlet-name>
        <servlet-class>Entity.UserSelect_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login_Servlet</servlet-name>
        <servlet-class>Entity.Login_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDelete_Servlet</servlet-name>
        <servlet-class>Entity.UserDelete_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionAdd_Servlet</servlet-name>
        <servlet-class>Entity.QuestionAdd_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionSelect_Servlet</servlet-name>
        <servlet-class>Entity.QuestionSelect_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionDelete_Servlet</servlet-name>
        <servlet-class>Entity.QuestionDelete_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionFindById_Servlet</servlet-name>
        <servlet-class>Entity.QuestionFindById_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionUpdate_Servlet</servlet-name>
        <servlet-class>Entity.QuestionUpdate_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionRand_Servlet</servlet-name>
        <servlet-class>Entity.QuestionRand_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Exam_Servlet</servlet-name>
        <servlet-class>Entity.Exam_Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login_Servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAdd_Servlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAddServlet</servlet-name>
        <url-pattern>/add2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserSelect_Servlet</servlet-name>
        <url-pattern>/select</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDelete_Servlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionAdd_Servlet</servlet-name>
        <url-pattern>/questionAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionSelect_Servlet</servlet-name>
        <url-pattern>/questionSelect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionDelete_Servlet</servlet-name>
        <url-pattern>/questionDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionFindById_Servlet</servlet-name>
        <url-pattern>/questionFindById</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionUpdate_Servlet</servlet-name>
        <url-pattern>/questionUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionRand_Servlet</servlet-name>
        <url-pattern>/questionRand</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Exam_Servlet</servlet-name>
        <url-pattern>/exam</url-pattern>
    </servlet-mapping>
</web-app>